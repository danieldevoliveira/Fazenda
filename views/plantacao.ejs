      <!-- Display existing plantations -->
      <!-- <% plantacao.forEach(plantacao => { %> -->
        <!-- <li><%= plantacao.regiao_nome %> - <%= plantacao.planta_nome %> - <%= plantacao.data_inicial %></li> -->
      <!-- <% }); %> -->
    <!-- </ul> -->

  

  </div>
</div>

<script>
  document.getElementById('link-sua-plantacao').addEventListener('click', function () {
    // Redirect to the "Suas Plantações" page
    window.location.href = '/suasPlantacoes'; // Update the URL to your actual page
  });
</script>

</body>
</html>
